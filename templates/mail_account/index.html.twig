{% extends 'base.html.twig' %}

{% block title %}MailAccount index{% endblock %}

{% block body %}
    <h1>MailAccount index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>POP Server</th>
                <th>POP Port</th>
                <th>SMTP Server</th>
                <th>SMTP Port</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail_account in mail_accounts %}
            <tr>
                <td>{{ mail_account.id }}</td>
                <td>{{ mail_account.name }}</td>
                <td>{{ mail_account.popServer }}</td>
                <td>{{ mail_account.popPort }}</td>
                <td>{{ mail_account.smtpServer }}</td>
                <td>{{ mail_account.smtpPort }}</td>
                <td>{{ mail_account.username }}</td>
                <td>
                    <a href="{{ path('app_mail_account_show', {'id': mail_account.id}) }}">show</a>
                    <a href="{{ path('app_mail_account_edit', {'id': mail_account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mail_account_new') }}">Create new</a>
{% endblock %}
