{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ contact.notes }}</td>
            </tr>
            <tr>
                <th>Emails</th>
                <td>{{ contact.items|filter(i=>i.type=='email')|map(i=>i.value)|join(', ') }}</td>
            </tr>
            <tr>
                <th>Phones</th>
                <td>{{ contact.items|filter(i=>i.type=='phone')|map(i=>i.value)|join(', ') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">back to list</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
